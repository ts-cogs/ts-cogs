{
  "name": "@ts-cogs/architecture",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    
    
    "typegen": "tsc",
    "lint": "eslint ./src -c .eslintrc.js",
    "lint:fix": "eslint ./src -c .eslintrc.js --fix",
    "build": "rimraf dist && tsc && babel ./src --out-dir dist --extensions .ts",
    
    "buildTsup": "rimraf dist && tsup src/index.ts --format cjs,esm --dts",
    "dev": "nodemon -e ts,js --watch src --exec \"babel ./src --out-dir dist --extensions .ts\"",
    
    "changelog": "git-cliff --include-path \"core/architecture/**/*\" --repository \"../../\"  --output CHANGELOG.md",
    "release": "release-it --ci --preRelease=alpha"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "release-it": {
    "github": {
      
      "release": true
    },
    "plugins": {
      "release-it-pnpm": {}
    },
    "git": true
  },
  "author": "Dr. Frank Zickert",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.3",
    "@release-it/bumper": "^6.0.1",
    "@ts-cogs/babel-config": "workspace:*",
    "@ts-cogs/eslint-config": "workspace:*",
    "@ts-cogs/typescript-config": "workspace:*",
    "changelogithub": "^0.13.5",
    "eslint": "^8.53.0",
    "nodemon": "^2.0.7",
    "release-it": "^17.1.1",
    "release-it-pnpm": "^4.1.8",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.2.2"
  }
}
