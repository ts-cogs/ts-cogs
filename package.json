{
    "name": "@ts-cogs/ts-cogs",
    "description": "The Simple Tool To Make Your Components Mesh Like Cogs",
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ts-cogs/ts-cogs"
    },
    "bugs": {
        "url": "https://github.com/ts-cogs/ts-cogs/issues"
    },
    "scripts": {
        
        
        
        
        

        /**
         * Analyze the requirements
         */
        "req": "turbo req",
        
        /**
         *
         * Start the entire project in (hpt-reloading) development mode
         */
        "dev": "turbo dev",

        /**
         * Run the tests
         */
        "test": "turbo test",

        /**
         * validate the static source code structure
         */
        "lint": "turbo lint",
    
        /**
         * fix the static source code structure
         */
        "lint:fix": "turbo lint:fix",
        
        /**
         *
         * Build all packages
         */
        "build": "turbo build"

    },

    /**
     * Add SDLC dependencies here
     */
    "devDependencies": {
        /**
         * {@implements #turbo}
         */
        "turbo": "latest",

        /**
         * Run multiple npm-scripts in parallel or sequential
         */
        "npm-run-all": "^4.1.5"
    },

    "devEngines": {
        "node": ">= 18",
        "pnpm": ">= 8.9.0"
    },
    "workspaces": [
        "config/*", "docs", "core/*", "tools/*"
    ]
}