{
    "name": "@ts-cogs/ts-cogs",
    "description": "The Simple Tool To Make Your Components Mesh Like Cogs",
    "author": "Dr. Frank Zickert",
    "license": "GPL-3.0",
    "version": "0.0.1-alpha.2",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ts-cogs/ts-cogs"
    },
    "bugs": {
        "url": "https://github.com/ts-cogs/ts-cogs/issues"
    },
    "scripts": {
        
        
        
        
        
        
        "dev": "turbo dev",
        "test": "turbo test",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "build": "turbo build",
        
        "release": "release-it && turbo release"
    },
    "release-it": {
        
        "git": {
            "requireCleanWorkingDir": false
        },

        "npm": {
            "publish": false,
            "allowSameVersion": true
        },
        "plugins": {
            "@release-it-plugins/workspaces": {
                "workspaces": ["core/architecture/*"]
            },
            "@release-it/bumper": {
                "out": [
                  "package.json",
                  "core/architecture/package.json"
                ]
            }
        }
    },
    "devDependencies": {
        "@release-it-plugins/workspaces": "^4.2.0",
        "@release-it/bumper": "^6.0.1",
        "npm-run-all": "^4.1.5",
        "release-it": "^17.1.1",
        "turbo": "latest"
    },

    "devEngines": {
        "node": ">= 18",
        "pnpm": ">= 8.9.0"
    },
    
    "workspaces": [
        "config/*", "docs", "core/*", "tools/*"
    ]
}